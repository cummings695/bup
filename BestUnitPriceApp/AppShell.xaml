<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BestUnitPriceApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BestUnitPriceApp.Views"
    xmlns:local="clr-namespace:BestUnitPriceApp"
    xmlns:controls="clr-namespace:BestUnitPriceApp.Views.Controls">

    <ShellContent
        Shell.NavBarIsVisible="true"
        FlyoutItemIsVisible="False"
        Title="Loading"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:LoadingPage}"
        Route="LoadingPage" />

    
    <ShellContent
        Shell.NavBarIsVisible="false"
        FlyoutItemIsVisible="False"
        Title="Login"
        Icon="iconblank.png"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Items"
        Icon="iconlistdetail.png"
        ContentTemplate="{DataTemplate views:ItemsPage}"
        Route="ItemsPage" />
  
    <ShellContent
        Shell.NavBarIsVisible="true"
        Shell.NavBarHasShadow="True"
        Title="Order History"
        Icon="iconlistdetail.png"
        ContentTemplate="{DataTemplate views:BatchesPage}"
        Route="BatchesPage" />
    
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Restaurants"
        Icon="iconlistdetail.png"
        ContentTemplate="{DataTemplate views:RestaurantsPage}"
        Route="RestaurantsPage" />
    
    <ShellContent
        Shell.NavBarIsVisible="true"
        Title="Vendors"
        Icon="iconlistdetail.png"
        ContentTemplate="{DataTemplate views:VendorsPage}"
        Route="VendorsPage" />

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="#bdbbb7" >
                <controls:LogoView
                    Size="36">
                    
                </controls:LogoView>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>
</Shell>
