<?xml version="1.0" encoding="utf-8" ?>
<HorizontalStackLayout 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:util="clr-namespace:BestUnitPriceApp.Utilities"
    x:Class="BestUnitPriceApp.Views.Controls.LogoView"
    Padding="5"
    VerticalOptions="Center">

        <Label
            FontFamily="FAS"
            FontSize="{Binding LogoSize}"
            Margin="0,13,0,0"
            Text="{x:Static util:FontAwesomeHelper.TruckRampBox}" />
        <Label 
            FontAttributes="Bold"
            FontFamily="BlackOpsOne"
            FontSize="{Binding LogoSize}"
            HorizontalTextAlignment="Center"
            Text="Best"
            TextColor="{StaticResource White}"
            TextTransform="Uppercase"
            VerticalTextAlignment="Center" />
        <Label
            FontAttributes="Bold"
            FontFamily="BlackOpsOne"
            FontSize="{Binding LogoSize}"
            HorizontalTextAlignment="Center"
            Text="Unit"
            TextColor="{StaticResource Secondary}"
            TextTransform="Uppercase"
            VerticalTextAlignment="Center" />
        <Label
            FontAttributes="Bold"
            FontFamily="BlackOpsOne"
            FontSize="{Binding LogoSize}"
            HorizontalTextAlignment="Center"
            Text="Price"
            TextColor="{StaticResource Primary}"
            TextTransform="Uppercase"
            VerticalTextAlignment="Center" />
        
        <Label Text="{Binding Size}"></Label>
    </HorizontalStackLayout>
