<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="BestUnitPriceApp.Views.ScanInvoicePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:BestUnitPriceApp.Models"
    xmlns:vm="clr-namespace:BestUnitPriceApp.ViewModels"
    x:DataType="vm:ScanInvoiceViewModel">
    <ContentPage.Content>
        <Grid RowDefinitions="40,*">
            <Label Grid.Row="0" Text="SCAN INVOICES" />
                <Image Grid.Row="1" Source="{Binding ScannedImage}" Aspect="AspectFit"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>